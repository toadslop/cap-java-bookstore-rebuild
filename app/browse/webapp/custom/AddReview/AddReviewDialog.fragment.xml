<core:FragmentDefinition
   xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
   <Dialog
      title="Add Review"
      core:require="{handler: 'bookshop/custom/AddReview/AddReviewDialogHandler'}"
      validationError="handler.onValidationError"
      validationSuccess="handler.onValidationSuccess"
      afterOpen="handler.onAfterOpen">
      <f:Form
         id="addReviewForm"
         editable="true"
         title="Review Details">
         <f:layout>
            <f:ColumnLayout />
         </f:layout>
      </f:Form>
      <buttons>
        <Button
            id="submitReview"
            text="Submit"
            type="Emphasized"
            press="handler.submit"
            enabled="{= !${formErrors>/hasErrors} }" />
        <Button
            id="cancelReview"
            press="handler.cancel"
            text="Cancel" />
      </buttons>
   </Dialog>
</core:FragmentDefinition>